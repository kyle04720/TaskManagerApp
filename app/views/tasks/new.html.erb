<div class="main tasks-new">
    <div class="container">
      <h1 class="form-heading">新規TODO作成</h1>
        <%= form_with url: "/tasks/create", method: :post,local:true do |f| %>
          <div class="form">
            <div class="form-body">
              <%= f.text_area :content %>
              <label class="control-label" for="">期限</label>
              <%= f.datetime_local_field :deadline %>
              <label class="control-label" for="">タグ</label>
              <%= f.text_field :tag %>
              <%= f.submit "作成" %>
            </div>
          </div>
        <% end %>
    </div>
</div>